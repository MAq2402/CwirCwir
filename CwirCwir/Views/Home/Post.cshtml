@inject IPostService postService
@model  PostViewModel
@{ 
    ViewBag.Title = "Post";
}
@section Styles
{
    <link href="~/Styles/Home-Post.css" rel="stylesheet" />
}
@Html.Partial("_Navbar");
<div class="panel panel-primary">
    <div class="panel-heading">
        @Model.post.User.UserName
        <span id="PostDate">@Model.post.PostDate;</span>
    </div>
    <div class=" panel-body">
        @Model.post.Content;
    </div>
    <div class="panel-footer">
        <form  method="post" asp-action="Like" asp-contoller="Home" asp-route-id="@Model.post.Id">
            <button type="submit" class="btn btn-deafult">
                <span class="glyphicon glyphicon-heart"></span> @Model.post.Likes.Count
            </button>
        </form>
        <form method="post" asp-action="" asp-contoller="">
            <button type="button" class="btn btn-deafult">
                <span class="glyphicon glyphicon-refresh"></span> @Model.post.Sharings.Count
            </button>
        </form>
            <form method="post" asp-action="" asp-contoller="">
                <button type="button" class="btn btn-deafult">
                    <span class="glyphicon glyphicon-comment"></span> @Model.post.Responses.Count
                </button>
            </form>
</div>
</div>
<div id="ResponseToPost">
        <form id="PostForm" method="post" asp-antiforgery="true" asp-controller="Home" asp-action="Response" asp-route-id="@Model.post.Id">
            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                <input asp-for="Content" type="text" class="form-control" placeholder="Co się dzieje?" aria-describedby="basic-addon1">
            </div>
            <div class="CwirnijBtn">
                <input class="btn btn-primary" type="submit" value="Ćwirnij" />
            </div>
            <div asp-validation-summary="All"></div>
        </form>
</div>
@foreach (var response in Model.post.Responses)
{
    <div id="LinkToPostDiv">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @response.User.UserName
                    <span id="PostDate">@response.PostDate</span>
                </div>
                <div class=" panel-body">
                    @response.Content;
                </div>
                <div class="panel-footer">
                    <span class="glyphicon glyphicon-heart"></span> @response.Likes.Count
                </div>
            </div>
    </div>
}