@model WallViewModel
@inject IPostService postService
@{
    ViewBag.Title = "Cwir Cwir";
}
@section Styles
{ 
    <link href="~/Styles/Home-Wall.css" rel="stylesheet" />
}
@Html.Partial("_Navbar");
<div id="PostDiv">
    <form id="PostForm" method="post" asp-antiforgery="true">
        <div class="input-group input-group-lg">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
            <input asp-for="Content" type="text" class="form-control" placeholder="Co się dzieje?" aria-describedby="basic-addon1">
        </div>
        <div class="CwirnijBtn">
            <input class="btn btn-primary" type="submit" value="Ćwirnij" />
        </div>
    </form>
</div>

@foreach (var post in postService.Posts)
{
    @Html.Partial("_Posts", post);
}

