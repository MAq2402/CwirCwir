@model LoginViewModel
@{ 
    ViewBag.Title = "Logowanie";
}

<h2>Zaloguj się do Ćwir Ćwir</h2>
<form class="form-horizontal" method="post" asp-antiforgery="true">
    
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div id="ButtonDiv">
        <input class="btn btn-primary" type="submit" value="Zaloguj się" />
    </div>
    <div class="ValSum" asp-validation-summary="ModelOnly">

    </div>
</form>
